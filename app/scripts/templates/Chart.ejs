<% if( type.indexOf('pie') > -1 || type.indexOf('doughnut') > -1 || type.indexOf('polar') > -1 ) { %>
<div class="col-xs-12 special-block">
    <div class="row chart-area">
        <div class="col-xs-12">
            <a class="js-open-modal btn btn-expand" href="#">
                <span class="fa fa-expand"></span>
            </a>

            <div>
                <canvas id="<%= 'canvas-' + id %>"></canvas>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 chart-button-block details-block">
            <span class="title"><%= shortTitle %></span>

            <div class="text-center">
                <button class="btn btn-default btn-sm expand"><span class="fa fa-expand"></span> View</button>
                <button class="btn btn-default btn-sm xls-download" <%- spreadsheet ? 'null' : 'disabled' %> ><span
                        class="fa fa-download"></span> Data (xls)
                </button>
                <button class="btn btn-default btn-sm doc-download" <%- methods ? 'null' : 'disabled' %> ><span
                        class="fa fa-download"></span> Methods
                </button>
                <button class="btn btn-default btn-sm jpg-download"><span class="fa fa-download"></span> JPG</button>
            </div>
        </div>
    </div>
</div>
<% } else { %>
<div class="col-xs-12 special-block">
    <div class="row chart-area">
        <div class="col-xs-12">
            <a class="js-open-modal btn btn-expand" href="#">
                <span class="fa fa-expand"></span>
            </a>

            <div>
                <canvas id="<%= 'canvas-' + id %>"></canvas>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 chart-button-block details-block">
            <span class="title"><%= shortTitle %></span>

            <div class="text-center">
                <button class="btn btn-default btn-sm expand"><span class="fa fa-expand"></span> View</button>
                <button class="btn btn-default btn-sm xls-download" <%- spreadsheet ? 'null' : 'disabled' %> ><span
                        class="fa fa-download"></span> Data (xls)
                </button>
                <button class="btn btn-default btn-sm doc-download" <%- methods ? 'null' : 'disabled' %> ><span
                        class="fa fa-download"></span> Methods
                </button>
                <button class="btn btn-default btn-sm jpg-download"><span class="fa fa-download"></span> JPG</button>
            </div>
        </div>
    </div>
</div>
<% } %>

